{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "commonjs": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}